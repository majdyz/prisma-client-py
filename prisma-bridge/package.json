{
  "name": "@prisma-client-py/bridge",
  "version": "0.1.0",
  "description": "Bridge service between prisma-client-py and Prisma TypeScript client for Prisma 6+ support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/RobertCraigie/prisma-client-py.git",
    "directory": "prisma-bridge"
  },
  "homepage": "https://github.com/RobertCraigie/prisma-client-py/tree/main/prisma-bridge",
  "bugs": {
    "url": "https://github.com/RobertCraigie/prisma-client-py/issues"
  },
  "keywords": [
    "prisma",
    "prisma-client-py",
    "bridge",
    "typescript",
    "python",
    "database",
    "orm"
  ],
  "author": "Robert Craigie",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "docker:build": "docker build -t prisma-bridge .",
    "docker:run": "docker run -p 4466:4466 --env-file .env prisma-bridge"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "jest": "^30.2.0",
    "prisma": "^6.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "prisma/schema.prisma",
    "README.md"
  ]
}
